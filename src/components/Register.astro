<section id="register" class="py-16 bg-gray-120">
    <div class="container mx-auto max-w-md bg-white p-8 rounded-lg shadow-lg">
      <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Бүртгүүлэх</h2>
      <form id="registerForm">
        <div class="mb-4">
          <label for="username" class="block text-gray-600">Хэрэглэгчийн нэр</label>
          <input type="text" id="username" name="username" class="w-full p-3 border rounded-lg" required />
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-600">Имэйл хаяг</label>
          <input type="email" id="email" name="email" class="w-full p-3 border rounded-lg" required />
        </div>
        <div class="mb-4">
          <label for="password" class="block text-gray-600">Нууц үг</label>
          <input type="password" id="password" name="password" class="w-full p-3 border rounded-lg" required />
        </div>
        <div class="mb-4">
          <label for="confirmPassword" class="block text-gray-600">Нууц үг давтах</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="w-full p-3 border rounded-lg" required />
        </div>
        <div class="flex justify-between items-center">
          <button type="submit" class="w-full bg-blue-700 text-white p-3 rounded-lg hover:bg-red-400 font-bold">Бүртгүүлэх</button>
        </div>
      </form>
    </div>
  </section>
  
