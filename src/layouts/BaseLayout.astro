---
const { title, children } = Astro.props;
---

<!DOCTYPE html>
<html lang="mn">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="/dist/output.css" rel="stylesheet">
</head>
<body class="font-roboto bg-gray-50">

  <header class="bg-blue-500 text-white p-4">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <a href="/" class="text-xl font-bold">Монгол Экспресс ХХК</a>
      <nav>
        <ul class="flex space-x-6">
          <li><a href="/" class="hover:underline">Нүүр хуудас</a></li>
          <li><a href="/services" class="hover:underline">Үйлчилгээ</a></li>
          <li><a href="/about" class="hover:underline">Тухай</a></li>
          <li><a href="/contact" class="hover:underline">Холбоо барих</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main>{children}</main>

  <footer class="bg-gray-800 text-white text-center py-4">
    <p>&copy; 2025 Монгол Экспресс ХХК. Бүх эрх хуулиар хамгаалагдсан.</p>
  </footer>

</body>
</html>
